@model HelloWordK20A.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>XuLy</title>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div class="panel panel-primary"> 
        <div class="panel-heading text-center">
            <h3>Thông tin khách mời</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Họ tên</label>
                    @Html.TextBoxFor(x => x.HoTen, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>SĐT</label>
                    @Html.TextBoxFor(x => x.DienThoai, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Tham dự?</label>
                    @Html.DropDownListFor(x=>x.XacNhan, new []
               {
                   new SelectListItem(){Text =" Có, tôi sẽ tới", Value=bool.TrueString},
                   new SelectListItem(){Text =" Không, tôi bận", Value=bool.FalseString}
               }, new {@class="form-control"} )
                </div>

                <div class="text-center">
                    <input type="submit" value="Gửi xác nhận" class="btn btn-primary"/>
                </div>

            }
        </div>
    </div>
</body>
</html>
